#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <string.h>
#include <windows.h>
#include <conio.h>
// =========== {program start} ==========

void intro();
void outro();
// ------ main --------
int main(void){
  system("color 04");
  intro();
   char ready = '\0' , z = '\0',ready1 = '\0',toption = '\0',foption = '\0'; // cm = condition making.
   float x = 0 , y = 0 ,operation = 0;
   uint8_t uc = 0;
   //==== Processing ====
label:
  while(ready = 'y'){  //======== main while.for ready.
    printf("\n Are you ready ? (y/n)");printf("\n Enter :: "); scanf("%s",&ready); system("cls"); //ready question.
    if(ready == 'y' || ready == 'Y'){system("cls");printf("\n Ok, Let's go!.\n");goto label1;}
    else if(ready == 'n' || ready == 'N') {system("cls");printf("\n Ok, press 'r' when you ready. Or 'n' if not.\n"); // ready end
  printf("\n Enter :: ");scanf("%s",&ready1);
 if(ready1 == 'r' || ready1 == 'R') {system("cls");printf("\nOk,here we go.\n");goto label;} // ready1 condition 1.
else if(ready1 == 'n' || ready1 == 'N') {system("cls");printf("\nOk, Have a nice time!\n");outro();exit(0);}
}//Not ready.Exit- while 1

label1:
system("cls"); printf("\n What computation proccess do you want ?");printf("\n 1) Add. \n 2) substract.");
printf("\n Enter :: "); scanf("%d",&uc);

switch(uc){
  case 1: system("cls");printf("\n Let's GO !\n");
  while(z = 'y'){ //======== nested while for quiz.
    printf("\n Enter 2 number to add.");
     printf("\n Number[1] :: "); scanf(" %f",&x); // num 1.
     printf("\n Number[2] :: "); scanf(" %f",&y); // num 2.
    operation = (x + y);
    system("cls"); printf("\n [%.2f] + [%.2f] = %.2f\n",x,y,operation); // result.
    printf("\n Again ?(y/n) ::  "); scanf(" %c",&z);system("cls"); // user choice.
    if( z == 'n') {system("cls");printf("\n Try another operation or leave ?(t/l)");printf("\n Enter :: " );scanf("%s",&toption);
    if(toption == 't' || toption == 'T') {system("cls");goto label1;} // end if 2
    else if (toption == 'l' || toption == 'L') {system("cls");printf("\n Ok,Bye !");outro();exit(0);} // end if 3
  } // No 1- option , end if 1
} // while loop_1
    break;
case 2 : system("cls");printf("\n Let's GO !\n");
while(z = 'y'){ //======== nested while for quiz.
  printf("\n Enter 2 number to subtract.");
   printf("\n Number[1] :: "); scanf(" %f",&x); // num 1.
   printf("\n Number[2] :: "); scanf(" %f",&y); // num 2.
  operation = (x - y);
  system("cls"); printf("\n [%.2f] - [%.2f] = %.2f\n",x,y,operation); // result.
  if(z == 'n' || z == 'N') {system("cls");}
  printf("\n Try another operation or leave ?(t/l)");printf("\n Enter :: ");scanf("%s",&toption);
  if(toption == 't' || toption == 'T') {system("cls");goto label1;} // end if 2
  else if (toption == 'l' || toption == 'L') {system("cls");printf("\n Ok,Bye !\n");outro();exit(0);} // end if 3
} //end while 2.
  break;

default :  system("cls"); printf("\n ### ## Error!.Please enter a valid option. ## ### \n"); sleep(1); goto label1;
  break;
} // switch case end.
} //while loop_1.
return 0;
}
// --------- {sub-Functions} -----------
void intro(void){
  printf("\n\t #########- Welcome to my simple 'quiz model' program -########## \n");
  printf("\n \t\t\t ###~ Eng:Mohamed Ashraf ~### \n");
}
void outro(void){
  printf("\n #### Credits : \t \n ~ Eng:Mohamed Ashraf ~ ###\n");
  printf("\n B-Email : gtlyco205@gmail.com\n");
}
